    <section class='p-5'>
      <div class=''>
        <h1 class='text-center mt-3 mb-2 fw-bold'>My Project</h1>

        <div class='mt-4 row row-cols-1 row-cols-md-3 g-4'>

          {{#each full}}
            <div class='col'>
              <div class='card'>
                <img
                  src='https://img-cdn.hltv.org/gallerypicture/jUe80LTAcnjwX0XwvliFM-.jpg?ixlib=java-2.1.0&m=%2Fm.png&mw=1091&mx=202&my=4847&w=8192&s=d96ec395fb94a052d06d4caaf35d087c'
                  class='card-img-top'
                  alt='Project Thumbnail'
                />
                <div class='col-md-12'>
                  <div class='card-body position-relative'>
                    <a
                      href='/project-detail/{{this.id}}'
                      style='color: inherit; text-decoration: none;'
                      target='_blank'
                    ><h5 class='card-title'>{{this.title}}</h5> </a>
                    <p>{{this.duration}}</pc>
                    <p class='card-text my-3'>
                      {{this.content}}
                    </p>
                    <p class='mt-4'>
                      <i class='{{this.nodejs}}'></i>
                      <i class='{{this.reactjs}}'></i>
                      <i class='{{this.ruby}}'></i>
                      <i class='{{this.go}}'></i>
                    </p>
                    <div
                      class='d-flex flex-row justify-content-center mt-5'
                    >
                      <a href='/update-project/{{this.id}}'><button
                          type='button'
                          class='btn btn-dark w-100 me-1'
                        >Edit</button>
                      </a>
                      <a href='/delete-project/{{this.id}}'><button
                          type='button'
                          class='btn btn-dark w-100 ms-1'
                        >Delete</button>
                      </a>
                    </div>
                  </div>
